<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/construtora</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <mapping class="br.com.construtora.model.Pessoa"/>
        <mapping class="br.com.construtora.model.Cliente"/>
        <mapping class="br.com.construtora.model.Funcionario"/>
        <mapping class="br.com.construtora.model.Usuario"/>
        <mapping class="br.com.construtora.model.Fornecedor"/>
        <mapping class="br.com.construtora.model.Endereco"/>
        <mapping class="br.com.construtora.model.Perfil"/>
        <mapping class="br.com.construtora.model.Obra"/>
        <mapping class="br.com.construtora.model.financeiro.Despesas"/>
        <mapping class="br.com.construtora.model.financeiro.DespesasGeral"/>
        <mapping class="br.com.construtora.model.financeiro.DespesasObra"/>
    </session-factory>
</hibernate-configuration>
